{
    "name": "lustmored/translatable-extras-bundle",
    "description": "Additional classes and tools to use with Symfony TranslatableInterface",
    "keywords": ["translatable", "bundle"],
    "homepage": "https://github.com/Lustmored/translatable-extras-bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Caban",
            "email": "kuba.iluvatar@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/config": "^6.1",
        "symfony/dependency-injection": "^6.1",
        "symfony/http-kernel": "^6.1",
        "symfony/translation": "^6.1"
    },
    "require-dev": {
        "symfony/serializer": "^6.1"
    },
    "config": {
        "sort-packages": true
    },
    "suggest": {
        "symfony/serializer": "To automatically translate messages in serializer"
    },
    "autoload": {
        "files": [
            "functions.php"
        ],
        "psr-4": {
            "Lustmored\\TranslatableExtrasBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    }
}
